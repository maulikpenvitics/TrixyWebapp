						{
							@if (User.IsInRole("Admin"))
							{
								<li class="treeview" onclick="window.open(this.querySelector('a').href, '_blank');">
									<a href="/User/Index" target="">
										<i data-feather="user"></i><span>Users</span>
									</a>
								</li>
							}
						}
						
					</ul>
				</div>
			</div>
		</section>
